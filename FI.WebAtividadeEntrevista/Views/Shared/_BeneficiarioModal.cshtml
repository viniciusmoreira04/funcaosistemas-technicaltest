@{
    ViewBag.Title = "Cadastrar Beneficiario";
}

@section scripts{
    <script>
        var urlPost = '@Url.Action("IncluirBeneficiario", "Beneficiario", new { area = "" })';
        var urlAlteracao = '@Url.Action("AtualizarBeneficiario", "Beneficiario", new { area = "" })';
        var urlExclusao = '@Url.Action("RemoveBeneficiario", "Beneficiario", new { area = "" })';
        var urlGetBeneficiarios = '@Url.Action("GetBeneficiarios", "Beneficiario", new { area = "" })';
    </script>

    @Scripts.Render("~/bundles/beneficiarios")
}

<form id="formNovoBeneficiario" method="post">
    <div class="row">
        <div class="col-md-5">
            <div class="form-group">
                <label for="CPF">CPF:</label>
                <input required="required" type="text" class="form-control cpf-mask" id="CPF" name="CPF" placeholder="Ex.: 010.011.111-00" maxlength="14">
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <label for="Nome">Nome:</label>
                <input required="required" type="text" class="form-control" id="Nome" name="Nome" placeholder="Ex.: JoÃ£o" maxlength="50">
            </div>
        </div>
        <div class="col-md-2">
            <div class="pull-right">
                <button type="submit" class="btn btn-sm btn-success">Incluir</button>
            </div>
        </div>
    </div>
</form>